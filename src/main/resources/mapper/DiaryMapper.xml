<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.papyrus.mapper.DiaryMapper">
 <insert id="addDiary"  parameterType="com.example.papyrus.dto.DiaryDTO" >
        INSERT INTO diary
            (user_id, diary_title, diary_content, diary_img_id, category_id)
        VALUES
            (#{user_id},#{diary_title},#{diary_content},#{diary_img_id}.#{category_id})
    </insert>
    <select id="getDiaryList" resultType="com.example.papyrus.dto.DiaryDTO">
        SELECT * FROM diary
    </select>
    <select id="getDiaryById" resultType="com.example.papyrus.dto.DiaryDTO">
     SELECT * FROM diary WHERE diary_id = #{diary_id}
    </select>
    <select id="getUserDiaryList" resultType="com.example.papyrus.dto.DiaryDTO">
        SELECT * FROM diary WHERE user_id = #{user_id};
    </select>

</mapper>