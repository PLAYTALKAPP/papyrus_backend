<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.papyrus.mapper.UserMapper">
    <insert id="signUpUser" parameterType="com.example.papyrus.dto.UserDTO">
        INSERT INTO users
            (user_id, user_name, user_pw, phone, email, profile_img)
        VALUES
            (#{user_id}, #{user_name}, #{user_pw}, #{phone}, #{email}, #{profile_img})
    </insert>
    <delete id="deleteUser"></delete>
    <select id="getUserList" resultType="com.example.papyrus.dto.UserDTO">
        SELECT * FROM users
    </select>
    <select id="userIdCheck" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM users WHERE user_id = #{user_id};
    </select>
    <select id="loginUser" resultType="com.example.papyrus.dto.UserDTO">
        SELECT * FROM users WHERE user_id=#{user_id} AND user_pw = #{user_pw};
    </select>
    <select id="findUserById" resultType="com.example.papyrus.dto.UserDTO">
        SELECT * FROM users WHERE user_id=#{user_id}
    </select>
</mapper>